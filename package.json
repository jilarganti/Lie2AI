{
  "name": "lie2ai-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "author": "SMYRNA INFORMATION TECHNOLOGY NETWORK SERVICES L.L.C",
  "description": "AI-centric Video Meetings: Speech and Emotion Analysis",
  "homepage": "https://github.com/jilarganti/Lie2AI",
  "bugs": "https://github.com/jilarganti/Lie2AI/issues",
  "repository": "github:jilarganti/Lie2AI",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r dev --host",
    "build": "pnpm -r build",
    "preview": "pnpm -r preview",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "pnpm vitest --no-watch --outputFile vitest-report/index.html -c configs/vite.config.ts",
    "test:unit:ui": "vite preview --outDir vitest-report",
    "test:e2e": "playwright test -c configs/playwright.config.ts",
    "test:e2e:ui": "playwright show-report",
    "check:links": "pnpm -F site check:links",
    "lint": "pnpm -F site lint",
    "format": "prettier -cw . --ignore-path=configs/.prettierignore",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-angular": "19.3.0",
    "@playwright/test": "^1.45.3",
    "@types/node": "^20.14.13",
    "@vitest/ui": "^1.6.0",
    "chalk": "^5.3.0",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0",
    "vite": "^5.3.5",
    "vitest": "^1.6.0",
    "vue": "^3.4.35"
  },
  "dependencies": {
    "simple-git-hooks": "^2.11.1"
  },
  "pnpm": {},
  "simple-git-hooks": {
    "pre-commit": "pnpm lint && pnpm format",
    "pre-push": "pnpm test:unit",
    "commit-msg": "npx --no-install commitlint --edit $1 -g configs/.commitlintrc.json",
    "preserveUnused": [
      "commit-msg"
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "keywords": [
    "videomeeting",
    "ai"
  ]
}
